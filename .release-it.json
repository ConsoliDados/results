{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"git": {
		"requireBranch": "main",
		"commitMessage": "chore: release v${version}"
	},
	"hooks": {
		"before:init": ["git pull", "pnpm run test"],
		"afeter:bump": "npx auto-changelog -p"
	},
	"github": {
		"release": true
	},
	"npm": {
		"publish": true
	}
}
